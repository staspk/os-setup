[
    
    /* AHK2: 'Alt+Esc' sends signal 'ctrl+w' to VsCode. Do not change default: ctrl+w->workbench.action.closeActiveEditor  */      
    
    { "key": "alt+`",          "command": "workbench.view.explorer",        "when": "viewContainer.workbench.view.explorer.enabled" },
    
    { "key": "alt+q",          "command": "editor.action.indentLines",      "when": "editorTextFocus"  },
    { "key": "alt+left",       "command": "cursorLineStart",                "when": "editorTextFocus"  },
    { "key": "alt+right",      "command": "cursorLineEnd",                  "when": "editorTextFocus"  },
    { "key": "alt+backspace",  "command": "editor.action.deleteLines",      "when": "editorTextFocus"  },

    { "key": "alt+1",          "command": "editor.foldLevel1",              "when": "editorTextFocus"  },
    { "key": "alt+2",          "command": "editor.foldLevel2",              "when": "editorTextFocus"  },
    { "key": "alt+3",          "command": "editor.foldLevel3",              "when": "editorTextFocus"  },
    { "key": "alt+4",          "command": "editor.foldLevel4",              "when": "editorTextFocus"  },
    { "key": "alt+5",          "command": "editor.foldLevel5",              "when": "editorTextFocus"  },
    { "key": "alt+9",          "command": "editor.foldAll",                 "when": "editorTextFocus"  },
    { "key": "alt+0",          "command": "editor.unfoldAll",               "when": "editorTextFocus"  },

    { "key": "ctrl+shift+/",   "command": "editor.action.blockComment",     "when": "editorTextFocus"  },
    
    { "key": "ctrl+.",         "command": "editor.action.rename",           "when": "!editorHasCodeActionsProvider && editorHasRenameProvider && editorTextFocus && !editorReadonly" },
    { "key": "ctrl+.",         "command": "editor.action.quickFix",         "when": "editorHasCodeActionsProvider && editorTextFocus && !editorReadonly" },

    
    { "key": "ctrl+f",         "command": "actions.find" },
    { "key": "ctrl+f",         "command": "editor.action.startFindReplaceAction", "when": "!editorReadonly" },

    { "key": "ctrl+\\",        "command": "workbench.action.terminal.focusNext", "when": "terminalHasBeenCreated" },
    { "key": "alt+\\",         "command": "workbench.action.terminal.focusNext", "when": "terminalHasBeenCreated" },
]