{
    "window.restoreFullscreen": true,
    "window.newWindowDimensions": "maximized",
    
    "editor.mouseWheelScrollSensitivity": 1.5,
    "explorer.compactFolders": false,

    "git.openRepositoryInParentFolders": "never",                                   // If you open a folder that itself is not a Git repository, VS Code won't traverse upward in the directory structure to find one.
    "editor.unicodeHighlight.ambiguousCharacters": false,                           // Removes pop-in of yellow rectangles around russian text

    "security.workspace.trust.untrustedFiles": "open",
    
    "workbench.colorTheme": "One Monokai",
    "workbench.colorCustomizations": {
        "editorBracketHighlight.unexpectedBracket.foreground": "#D7ECFF",
        "editorBracketHighlight.foreground1": "#D7ECFF",
        "editorBracketHighlight.foreground2": "#D7ECFF",
        "editorBracketHighlight.foreground3": "#D7ECFF",
        "editorBracketHighlight.foreground4": "#D7ECFF",
        "editorBracketHighlight.foreground5": "#D7ECFF",
        "editorBracketHighlight.foreground6": "#D7ECFF",

        "editorIndentGuide.activeBackground1": "#b6b6b60e",
        "editorIndentGuide.activeBackground2": "#b6b6b60e",
        "editorIndentGuide.activeBackground3": "#b6b6b60e",
        "editorIndentGuide.activeBackground4": "#b6b6b60e",
        "editorIndentGuide.activeBackground5": "#b6b6b60e",
        "editorIndentGuide.activeBackground6": "#b6b6b60e",
        "editorIndentGuide.background1": "#b6b6b60e",
        "editorIndentGuide.background2": "#b6b6b60e",
        "editorIndentGuide.background3": "#b6b6b60e",
        "editorIndentGuide.background4": "#b6b6b60e",
        "editorIndentGuide.background5": "#b6b6b60e",
        "editorIndentGuide.background6": "#b6b6b60e",
        
        // Foreground colors for filenames in sidebar / tab-bar
        "tab.activeForeground": "#f1fdf5",
        "tab.inactiveForeground": "#f1fdf5",    
        "list.errorForeground": "#f5c0c0",
        // "list.infoForeground": "#00FF00",                // delete if it doesnt bother in you in the future
        "list.warningForeground": "#d8ffe6",
        "gitDecoration.modifiedResourceForeground": "#d8ffe6",
        "gitDecoration.untrackedResourceForeground": "#d8ffe6",
        "gitDecoration.stageModifiedResourceForeground": "#d8ffe6",
        "gitDecoration.addedResourceForeground": "#b5f5c1",
        "gitDecoration.ignoredResourceForeground": "#c4dfce",
        "gitDecoration.deletedResourceForeground": "#ff26001a",
        
        "editorWarning.foreground": "#eeff0042",
    },
    "editor.tokenColorCustomizations": {
        "comments": "#aaa7a7d2",
        "functions": "#dffffb",
        "variables": "#ffedea",
        "types": "#dacaff",
        "strings": "#ffffff",
        "keywords": "#fcefe3",
        "numbers": "#ffffff",
        "textMateRules": [
            {
                "scope":   [ "variable.other.object" ],
                "settings": { "foreground": "#addaff" }
            },
            {
                "scope":   [ "keyword.operator", "keyword.operator.logical", "punctuation", "variable.parameter" ],
                "settings": { "foreground": "#faf1ff" }
            },
            {
                "scope":   [ "keyword.operator", "string.template" ],
                "settings": { "foreground": "#fcf7ff", }
            },
            {
                "scope":   [ "variable.language", "variable.other", "variable.parameter", "variable.other.property" ],
                "settings": { "foreground": "#f2d9ff", }
            },


            // -------------------------------------------------------------------------------------------------------------
            //      JAVASCRIPT
            // -------------------------------------------------------------------------------------------------------------
            {
                "scope":   [ "meta.definition.variable.js", "meta.var-single-variable.expr.js", "meta.var.expr.js" ],
                "settings": { "foreground": "#f0f9ff", }
            },
            {
                "scope":   [ "variable.other.constant.js", "variable.other.object.js", "variable.parameter.js", "variable.other.property.js", "variable.other.readwrite.js",
                             "variable.other.object.ts", "variable.other.constant.ts" ],
                "settings": { "foreground": "#efdff8", }
            },
            {
                "scope":   [ "punctuation.definition.template-expression.begin.js", "punctuation.definition.template-expression.end.js" ],
                "settings": { "foreground": "#f2d9ff", }
            },
            {
                "scope":   [ "entity.name.function.js", "punctuation.definition.block.js"  ],
                "settings": { "foreground": "#ccf7f1", }
            },
            {
                "scope":   [ "string.template.js", "storage.type.js", "support.function.js" ],
                "settings": { "foreground": "#ffffff", }
            },


            // -------------------------------------------------------------------------------------------------------------
            //      TYPESCRIPT
            // -------------------------------------------------------------------------------------------------------------
            {
                "scope":   [ "meta.brace.round.ts"  ],
                "settings": { "foreground": "#C8FBFF", }
            },
            {
                "scope":   [ "punctuation.definition.template-expression", "meta.brace.round.ts" ],
                "settings": { "foreground": "#FCEFE3", }
            },
            {
                "scope":   [ "variable.other.object.ts", "variable.other.constant.ts", "variable.other.object.property.ts" ],
                "settings": { "foreground": "#efdff8", }
            },
            {
                "scope":   [ "support.constant.json.ts", "constant.language.null.ts" ],
                "settings": { "foreground": "#73c8d3", }
            },


            // -------------------------------------------------------------------------------------------------------------
            //      Powershell
            // -------------------------------------------------------------------------------------------------------------
            {
                "scope":   [ "meta.scriptblock.powershell" ],
                "settings": { "foreground": "#d7ecff", }
            },
            {
                "scope":   [ "source.powershell" ],
                "settings": { "foreground": "#d7ecff", }
            },
            {
                "scope":   [ "entity.name.function", "variable.other.member.powershell" ],
                "settings": { "foreground": "#c8fbff", }
            },
            {
                "scope":   [ "support.function.attribute.powershell" ],
                "settings": { "foreground": "#F3E4D7", }
            },
            {
                "scope":   [ "constant.numeric.integer.powershell" ],
                "settings": { "foreground": "#fff6ef", }
            },
            {
                "scope":   [ "variable.other.readwrite.powershell" ],
                "settings": { "foreground": "#f8eaff", }
            },

            
            // -------------------------------------------------------------------------------------------------------------
            //      C#
            // -------------------------------------------------------------------------------------------------------------
            {
                "scope":   [ "storage.modifier.static.cs", "storage.type.class.cs", "keyword.type.void.cs" ],
                "settings": { "foreground": "#fff6ef", }
            },
            {
                "scope":   [ "entity.name.type.namespace.cs", "entity.name.function.cs" ],
                "settings": { "foreground": "#dafdff", }
            },
            {
                "scope":   [ "keyword.other.directive.using.cs" ],
                "settings": { "foreground": "#fff6ef", }
            },
            {   
                "scope":   [ "keyword.operator.expression.new.cs" ],
                "settings": { "foreground": "#fff6ef", }
            },
            {
                "scope":   [ "keyword.type.object.cs", "entity.name.type.cs", "variable.language.this.cs", "variable.other.object.cs", "entity.name.type.class.cs", "entity.name.type.type-parameter.cs" ],
                "settings": { "foreground": "#defbff", }
            },
            {
                "scope":   [  "entity.name.variable.field.cs", "entity.name.variable.parameter.cs", "variable.other.readwrite.cs", "entity.name.variable.local.cs" ],
                "settings": { "foreground": "#f8ecff", }
            },
            {
                "scope":   [ "entity.name.variable.property.cs", "variable.other.object.property.cs",   ],
                "settings": { "foreground": "#f1e0fc", }
            },
            {
                "scope":   [ "keyword.type.bool.cs", "keyword.type.string.cs", "keyword.type.int.cs", "constant.language.boolean.true.cs", "constant.language.boolean.false.cs", "constant.language.null.cs"  ],
                "settings": { "foreground": "#ffffe3", }
            }
        ]
    },

    "[python]": {
        "editor.semanticHighlighting.enabled": true,
    },
    "editor.semanticTokenColorCustomizations": {
        "rules": {
            "variable": { "foreground": "#e7e3e2e1" },
            "selfParameter": { "foreground": "#dacaff" },
            "module": "#a3ebf0"
        }
    },
}